<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3"
        android:background="@color/color1">

        <ImageButton
            android:id="@+id/agroforestryImgbt"
            android:layout_width="189dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/forest" />

        <ImageButton
            android:id="@+id/agronomyImgbt"
            android:layout_width="218dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/agronomy" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3"
        android:background="@color/color2">

        <ImageButton
            android:id="@+id/agriengImgbt"
            android:layout_width="189dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/agriengi" />

        <ImageButton
            android:id="@+id/animalHealthImgbt"
            android:layout_width="205dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/animalhealth" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3"
        android:background="@color/color3">

        <ImageButton
            android:id="@+id/animalNutriImgbt"
            android:paddingLeft="8dp"
            android:layout_width="189dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/nutrion" />

        <ImageButton
            android:id="@+id/animalProdImgbt"
            android:layout_width="212dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/product" />
    </LinearLayout>

</LinearLayout>